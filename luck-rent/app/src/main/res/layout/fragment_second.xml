<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.main.applicationform.SecondFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="none"
        tools:ignore="UselessParent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp">

            <TextView
                android:id="@+id/tvApplicantInfoLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:fontFamily="@font/poppins_bold"
                android:text="C) APPLICANT'S INFO"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sdp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvFirstName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvApplicantInfoLabel"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/poppins_regular"
                android:text="First Name"
                android:textColor="@color/blue" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etFirstName"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_below="@+id/tvFirstName"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/bg_edit"
                android:fontFamily="@font/poppins_regular"
                android:inputType="text"
                android:paddingStart="@dimen/_20sdp"
                android:textColor="@color/blue" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvMiddleName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etFirstName"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/poppins_regular"
                android:text="Middle Name"
                android:textColor="@color/blue" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etMiddleName"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_below="@+id/tvMiddleName"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/bg_edit"
                android:fontFamily="@font/poppins_regular"
                android:inputType="text"
                android:paddingStart="@dimen/_20sdp"
                android:textColor="@color/blue" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvLastName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etMiddleName"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/poppins_regular"
                android:text="Last Name"
                android:textColor="@color/blue" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etLastName"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_below="@+id/tvLastName"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/bg_edit"
                android:fontFamily="@font/poppins_regular"
                android:inputType="text"
                android:paddingStart="@dimen/_20sdp"
                android:textColor="@color/blue" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvBirthDateLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etLastName"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/poppins_regular"
                android:text="Date Of Birth"
                android:textColor="@color/blue" />

            <RelativeLayout
                android:id="@+id/rlBirthLayout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_below="@+id/tvBirthDateLabel"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/bg_edit">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvBirthDatePicker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="21/12/2021"
                    android:paddingStart="@dimen/_20sdp"
                    android:textColor="@color/bg_text"
                    android:textColorHint="@color/bg_text" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivStartDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:paddingLeft="@dimen/_15sdp"
                    android:paddingRight="@dimen/_15sdp"
                    android:src="@drawable/ic_calender" />
            </RelativeLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvPhoneNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rlBirthLayout"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/poppins_regular"
                android:text="Phone No"
                android:textColor="@color/blue" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_below="@+id/tvPhoneNumber"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/bg_edit"
                android:fontFamily="@font/poppins_regular"
                android:inputType="number"
                android:paddingStart="@dimen/_20sdp"
                android:textColor="@color/blue" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etPhoneNumber"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/poppins_regular"
                android:text="Email"
                android:textColor="@color/blue" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_below="@+id/tvEmail"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/bg_edit"
                android:fontFamily="@font/poppins_regular"
                android:inputType="textEmailAddress"
                android:paddingStart="@dimen/_20sdp"
                android:textColor="@color/blue" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvOtherMessagingApp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etEmail"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/poppins_regular"
                android:text="Other Messaging App"
                android:textColor="@color/blue" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etOtherMessagingApp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_below="@+id/tvOtherMessagingApp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/bg_edit"
                android:fontFamily="@font/poppins_regular"
                android:inputType="text"
                android:paddingStart="@dimen/_20sdp"
                android:textColor="@color/blue" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvCurrentAddressWithPostal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etOtherMessagingApp"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/poppins_regular"
                android:text="Current Address with Postal Code"
                android:textColor="@color/blue" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etCurrentAddressWithPostal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_below="@+id/tvCurrentAddressWithPostal"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/bg_edit"
                android:fontFamily="@font/poppins_regular"
                android:inputType="text"
                android:paddingStart="@dimen/_20sdp"
                android:textColor="@color/blue" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvCurrentAddressDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etCurrentAddressWithPostal"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/poppins_regular"
                android:text="Current Address Duration Stayed"
                android:textColor="@color/blue" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etCurrentAddressDuration"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_below="@+id/tvCurrentAddressDuration"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/bg_edit"
                android:fontFamily="@font/poppins_regular"
                android:inputType="text"
                android:paddingStart="@dimen/_20sdp"
                android:textColor="@color/blue" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvPreviousAddressWithPostal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etCurrentAddressDuration"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/poppins_regular"
                android:text="Previous Address with Postal Code"
                android:textColor="@color/blue" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etPreviousAddressWithPostal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_below="@+id/tvPreviousAddressWithPostal"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/bg_edit"
                android:fontFamily="@font/poppins_regular"
                android:inputType="text"
                android:paddingStart="@dimen/_20sdp"
                android:textColor="@color/blue" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvPreviousAddressDuration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etPreviousAddressWithPostal"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/poppins_regular"
                android:text="Previous Address Duration Stayed"
                android:textColor="@color/blue" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etPreviousAddressDuration"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_below="@+id/tvPreviousAddressDuration"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/bg_edit"
                android:fontFamily="@font/poppins_regular"
                android:inputType="text"
                android:paddingStart="@dimen/_20sdp"
                android:textColor="@color/blue" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvSIN"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etPreviousAddressDuration"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/poppins_regular"
                android:text="SIN/SSN (Optional)"
                android:textColor="@color/blue" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etSIN"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_below="@+id/tvSIN"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/bg_edit"
                android:fontFamily="@font/poppins_regular"
                android:inputType="number"
                android:hint="+333"
                android:textColorHint="@color/blue"
                android:paddingStart="@dimen/_20sdp"
                android:textColor="@color/blue" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvAddIdCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etSIN"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/poppins_regular"
                android:text="Add ID Card (Optional)"
                android:textColor="@color/blue" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvAddIdCard"
                android:layout_centerInParent="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:background="@drawable/picture_bg">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/pickImg"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_120sdp"
                    android:layout_centerInParent="true"
                    android:padding="@dimen/_10sdp"
                    android:src="@drawable/ic_renter_img" />
            </RelativeLayout>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
</layout>