<?xml version="1.0" encoding="utf-8"?>
<layout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.main.applicationform.ThirdFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="none"
        tools:ignore="UselessParent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp">

            <TextView
                android:id="@+id/tvApplicantInfoLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/poppins_bold"
                android:text="D) APPLICANT'S STATEMENTS"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sdp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvAdditionalOccupants"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvApplicantInfoLabel"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/poppins_regular"
                android:text="Additional Occupants"
                android:textColor="@color/blue" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etAdditionalOccupants"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:layout_below="@+id/tvAdditionalOccupants"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/bg_signature"
                android:fontFamily="@font/poppins_regular"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:paddingHorizontal="@dimen/_20sdp"
                android:paddingVertical="@dimen/_20sdp"
                android:textColor="@color/blue"
                android:textSize="@dimen/_12sdp" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvAreYouSmoker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etAdditionalOccupants"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/poppins_regular"
                android:text="Are you or other occupants a smoker?"
                android:textColor="@color/blue" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etAreYouSmoker"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_below="@+id/tvAreYouSmoker"
                android:layout_marginTop="@dimen/_10sdp"
                android:paddingVertical="@dimen/_5sdp"
                android:background="@drawable/bg_signature"
                android:fontFamily="@font/poppins_regular"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:maxLines="2"
                android:paddingHorizontal="@dimen/_20sdp"
                android:singleLine="false"
                android:textColor="@color/blue"
                android:textSize="@dimen/_12sdp" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvOwnPets"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etAreYouSmoker"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/poppins_regular"
                android:text="Own pets? If so, please describe pets"
                android:textColor="@color/blue" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etOwnPets"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_below="@+id/tvOwnPets"
                android:layout_marginTop="@dimen/_10sdp"
                android:paddingVertical="@dimen/_5sdp"
                android:background="@drawable/bg_signature"
                android:fontFamily="@font/poppins_regular"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:maxLines="2"
                android:paddingHorizontal="@dimen/_20sdp"
                android:singleLine="false"
                android:textColor="@color/blue"
                android:textSize="@dimen/_12sdp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvOwnCar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etOwnPets"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/poppins_regular"
                android:text="Own car? If so, please describe car"
                android:textColor="@color/blue" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etOwnCar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:layout_below="@+id/tvOwnCar"
                android:layout_marginTop="@dimen/_10sdp"
                android:paddingVertical="@dimen/_5sdp"
                android:background="@drawable/bg_signature"
                android:fontFamily="@font/poppins_regular"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:maxLines="2"
                android:paddingHorizontal="@dimen/_20sdp"
                android:singleLine="false"
                android:textColor="@color/blue"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/tvApplicantOccupationLabel"
                android:layout_below="@+id/etOwnCar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:fontFamily="@font/poppins_bold"
                android:text="E) APPLICANT'S OCCUPATION"
                android:textColor="@color/black"
                android:textSize="@dimen/_16sdp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvJobTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvApplicantOccupationLabel"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/poppins_regular"
                android:text="Job Title"
                android:textColor="@color/blue" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etJobTitle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_below="@+id/tvJobTitle"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/bg_edit"
                android:fontFamily="@font/poppins_regular"
                android:inputType="text"
                android:paddingStart="@dimen/_20sdp"
                android:textColor="@color/blue" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvCompanyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etJobTitle"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/poppins_regular"
                android:text="Company Name"
                android:textColor="@color/blue" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etCompanyName"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_below="@+id/tvCompanyName"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/bg_edit"
                android:fontFamily="@font/poppins_regular"
                android:inputType="text"
                android:paddingStart="@dimen/_20sdp"
                android:textColor="@color/blue" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvCompanyAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etCompanyName"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/poppins_regular"
                android:text="Company Address"
                android:textColor="@color/blue" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etCompanyAddress"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_below="@+id/tvCompanyAddress"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/bg_edit"
                android:fontFamily="@font/poppins_regular"
                android:inputType="text"
                android:paddingStart="@dimen/_20sdp"
                android:textColor="@color/blue" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvCompanyContactName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etCompanyAddress"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/poppins_regular"
                android:text="Company Contact Name"
                android:textColor="@color/blue" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etCompanyContactName"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_below="@+id/tvCompanyContactName"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/bg_edit"
                android:fontFamily="@font/poppins_regular"
                android:inputType="text"
                android:paddingStart="@dimen/_20sdp"
                android:textColor="@color/blue" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvCompanyContactNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etCompanyContactName"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/poppins_regular"
                android:text="Company Contact Phone"
                android:textColor="@color/blue" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etCompanyContactNumber"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_below="@+id/tvCompanyContactNumber"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/bg_edit"
                android:fontFamily="@font/poppins_regular"
                android:inputType="number"
                android:paddingStart="@dimen/_20sdp"
                android:textColor="@color/blue" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvEmploymentLength"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etCompanyContactNumber"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/poppins_regular"
                android:text="Length Of Employment"
                android:textColor="@color/blue" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etEmploymentLength"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_below="@+id/tvEmploymentLength"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/bg_edit"
                android:fontFamily="@font/poppins_regular"
                android:inputType="number"
                android:textColorHint="@color/blue"
                android:paddingStart="@dimen/_20sdp"
                android:textColor="@color/blue" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvSalary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etEmploymentLength"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/poppins_regular"
                android:text="Salary"
                android:textColor="@color/blue" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etSalary"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_below="@+id/tvSalary"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:background="@drawable/bg_edit"
                android:fontFamily="@font/poppins_regular"
                android:inputType="text"
                android:textColorHint="@color/blue"
                android:paddingStart="@dimen/_20sdp"
                android:textColor="@color/blue" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
</layout>