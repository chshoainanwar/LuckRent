<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/containerOne"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <RelativeLayout
            android:id="@+id/mainRL"

            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_10sdp">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fadeScrollbars="false"
                    android:scrollbars="none">

                    <RelativeLayout
                        android:id="@+id/rlOne"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/_15sdp">

                        <RelativeLayout
                            android:id="@+id/rlProperty"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:layout_marginEnd="@dimen/_8sdp">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvProperty"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_regular"
                                android:paddingStart="@dimen/_25sdp"
                                android:text="Property"
                                android:textColor="@color/darkBlue"
                                android:textSize="@dimen/_10sdp" />

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:id="@+id/llProperty"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_below="@id/tvProperty"
                                android:layout_marginTop="@dimen/_8sdp"
                                android:background="@drawable/bg_edit"
                                android:orientation="horizontal"
                                android:weightSum="1">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <com.example.luck_rent_android.ui.main.spinn.MaterialSpinner
                                        android:id="@+id/spProperty"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="@dimen/_6sdp"
                                        android:layout_marginRight="@dimen/_6sdp"
                                        android:background="@android:color/transparent"
                                        android:clickable="true"
                                        android:focusable="true"
                                        android:fontFamily="@font/poppins_regular"
                                        android:singleLine="true"
                                        android:textSize="@dimen/_13sdp"
                                        app:ms_background_color="@android:color/transparent"
                                        app:ms_hide_arrow="true"
                                        app:ms_hint="Property"
                                        app:ms_hint_color="@color/sand"
                                        app:ms_padding_left="@dimen/_12sdp"
                                        app:ms_padding_right="@dimen/_5sdp"
                                        app:ms_popup_padding_left="@dimen/_8sdp"
                                        app:ms_popup_padding_right="@dimen/_13sdp"
                                        app:ms_popup_padding_top="@dimen/_3sdp"
                                        app:ms_text_color="@color/darkBlue" />

                                    <LinearLayout
                                        android:id="@+id/llPropertyArrow"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_alignParentEnd="true"
                                        android:layout_alignParentRight="true">

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:paddingLeft="@dimen/_15sdp"
                                            android:paddingRight="@dimen/_15sdp"
                                            android:src="@drawable/ic_blue_arrow" />

                                    </LinearLayout>

                                </RelativeLayout>
                            </androidx.appcompat.widget.LinearLayoutCompat>

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rlExpenseCategory"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/rlProperty"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_marginEnd="@dimen/_8sdp">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvExpenseCategoryLabel"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_regular"
                                android:paddingStart="@dimen/_25sdp"
                                android:text="Expense Category"
                                android:textColor="@color/darkBlue"
                                android:textSize="@dimen/_10sdp" />

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:id="@+id/llExpenseCategory"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_below="@id/tvExpenseCategoryLabel"
                                android:layout_marginTop="@dimen/_8sdp"
                                android:background="@drawable/bg_edit"
                                android:orientation="horizontal"
                                android:weightSum="1">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <com.example.luck_rent_android.ui.main.spinn.MaterialSpinner
                                        android:id="@+id/spExpenseCategory"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="@dimen/_6sdp"
                                        android:layout_marginRight="@dimen/_6sdp"
                                        android:background="@android:color/transparent"
                                        android:clickable="true"
                                        android:focusable="true"
                                        android:fontFamily="@font/poppins_regular"
                                        android:singleLine="true"
                                        android:textSize="@dimen/_13sdp"
                                        app:ms_background_color="@android:color/transparent"
                                        app:ms_hide_arrow="true"
                                        app:ms_hint="Expense Category"
                                        app:ms_hint_color="@color/sand"
                                        app:ms_padding_left="@dimen/_12sdp"
                                        app:ms_padding_right="@dimen/_5sdp"
                                        app:ms_popup_padding_left="@dimen/_8sdp"
                                        app:ms_popup_padding_right="@dimen/_13sdp"
                                        app:ms_popup_padding_top="@dimen/_3sdp"
                                        app:ms_text_color="@color/darkBlue" />

                                    <LinearLayout
                                        android:id="@+id/llExpenseCategoryArrow"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_alignParentEnd="true"
                                        android:layout_alignParentRight="true">

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:paddingLeft="@dimen/_15sdp"
                                            android:paddingRight="@dimen/_15sdp"
                                            android:src="@drawable/ic_blue_arrow" />

                                    </LinearLayout>

                                </RelativeLayout>
                            </androidx.appcompat.widget.LinearLayoutCompat>

                        </RelativeLayout>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/llAmountDate"
                            android:layout_width="match_parent"
                            android:layout_height="20dp"
                            android:layout_below="@id/rlExpenseCategory"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_marginEnd="@dimen/_8sdp"
                            android:orientation="horizontal"
                            android:weightSum="1">


                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_below="@+id/etBookedBy"
                                android:layout_gravity="center"
                                android:layout_weight=".47"
                                android:fontFamily="@font/poppins_regular"
                                android:gravity="center"
                                android:inputType="text"
                                android:paddingStart="@dimen/_16sdp"
                                android:paddingEnd="@dimen/_16sdp"
                                android:singleLine="true"
                                android:text="Amount"
                                android:textColor="@color/darkBlue"
                                android:textSize="@dimen/_10sdp" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight=".05" />

                            <androidx.appcompat.widget.AppCompatTextView

                                android:layout_width="0dp"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_below="@+id/etBookedBy"
                                android:layout_gravity="center"
                                android:layout_weight=".47"
                                android:fontFamily="@font/poppins_regular"
                                android:gravity="center"
                                android:inputType="text"
                                android:paddingStart="@dimen/_16sdp"
                                android:paddingEnd="@dimen/_16sdp"
                                android:singleLine="true"
                                android:text="Transaction Date"
                                android:textColor="@color/darkBlue"
                                android:textSize="@dimen/_10sdp" />
                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/llDateSelection"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_45sdp"
                            android:layout_below="@id/llAmountDate"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_8sdp"
                            android:orientation="horizontal"
                            android:weightSum="1">


                            <RelativeLayout
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_weight=".5"
                                android:background="@drawable/bg_edit"
                                android:gravity="center">
                                <!--                                    <ImageView-->
                                <!--                                        android:layout_width="@dimen/_15sdp"-->
                                <!--                                        android:layout_height="@dimen/_15sdp"-->
                                <!--                                        android:src="@drawable/ic_dollar"-->
                                <!--                                        android:layout_marginTop="@dimen/_2sdp"-->
                                <!--                                        />-->
                                <androidx.appcompat.widget.AppCompatEditText
                                    android:id="@+id/tvAmount"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_weight=".47"
                                    android:background="@null"
                                    android:fontFamily="@font/poppins_regular"
                                    android:gravity="center"
                                    android:inputType="number"

                                    android:paddingEnd="@dimen/_16sdp"
                                    android:singleLine="true"
                                    android:textColor="@color/darkBlue"
                                    android:textColorHint="@color/darkBlue"
                                    android:textCursorDrawable="@color/black"
                                    android:textSize="@dimen/_13sdp" />
                            </RelativeLayout>


                            <View
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight=".03" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvTransactionDate"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_below="@+id/etBookedBy"
                                android:layout_gravity="center"
                                android:layout_marginBottom="@dimen/_3sdp"
                                android:layout_weight=".47"
                                android:background="@drawable/bg_edit"
                                android:fontFamily="@font/poppins_regular"
                                android:gravity="center"
                                android:paddingStart="@dimen/_16sdp"
                                android:paddingEnd="@dimen/_15sdp"
                                android:singleLine="true"
                                android:textColor="@color/darkBlue"
                                android:textColorHint="@color/darkBlue"
                                android:textCursorDrawable="@color/black"
                                android:textSize="@dimen/_13sdp" />
                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <RelativeLayout
                            android:id="@+id/rlRepeat"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/llDateSelection"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_marginEnd="@dimen/_8sdp">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvRepeatLabel"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_regular"
                                android:paddingStart="@dimen/_25sdp"
                                android:text="Repeat"
                                android:textColor="@color/darkBlue"
                                android:textSize="@dimen/_10sdp" />

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:id="@+id/llRepeat"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_below="@id/tvRepeatLabel"
                                android:layout_marginTop="@dimen/_8sdp"
                                android:background="@drawable/bg_edit"
                                android:orientation="horizontal"
                                android:weightSum="1">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <com.example.luck_rent_android.ui.main.spinn.MaterialSpinner
                                        android:id="@+id/spRepeat"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="@dimen/_6sdp"
                                        android:layout_marginRight="@dimen/_6sdp"
                                        android:background="@android:color/transparent"
                                        android:clickable="true"
                                        android:focusable="true"
                                        android:fontFamily="@font/poppins_regular"
                                        android:singleLine="true"
                                        android:textSize="@dimen/_13sdp"
                                        app:ms_background_color="@android:color/transparent"
                                        app:ms_hide_arrow="true"
                                        app:ms_hint="Repeat"
                                        app:ms_hint_color="@color/sand"
                                        app:ms_padding_left="@dimen/_12sdp"
                                        app:ms_padding_right="@dimen/_5sdp"
                                        app:ms_popup_padding_left="@dimen/_8sdp"
                                        app:ms_popup_padding_right="@dimen/_13sdp"
                                        app:ms_popup_padding_top="@dimen/_3sdp"
                                        app:ms_text_color="@color/darkBlue" />

                                    <LinearLayout
                                        android:id="@+id/llRepeatArrow"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_alignParentEnd="true"
                                        android:layout_alignParentRight="true">

                                        <ImageView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:paddingLeft="@dimen/_15sdp"
                                            android:paddingRight="@dimen/_15sdp"
                                            android:src="@drawable/ic_blue_arrow" />

                                    </LinearLayout>

                                </RelativeLayout>
                            </androidx.appcompat.widget.LinearLayoutCompat>

                        </RelativeLayout>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/llTaxStatus"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_45sdp"
                            android:layout_below="@id/rlRepeat"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tvTaxStatus"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_20sdp"
                                    android:fontFamily="@font/poppins_bold"
                                    android:paddingStart="@dimen/_15sdp"
                                    android:text="Tax Status"
                                    android:textColor="@color/orange"
                                    android:textSize="@dimen/_12sdp" />

                                <androidx.appcompat.widget.LinearLayoutCompat
                                    android:id="@+id/llChoose"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_23sdp"
                                    android:layout_below="@+id/tvTaxStatus"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:layout_marginEnd="@dimen/_10sdp"
                                    android:gravity="center"
                                    android:orientation="horizontal"
                                    android:weightSum="1">

                                    <RadioGroup
                                        android:id="@+id/rgTaxStatus"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginTop="@dimen/_3sdp"
                                        android:contentDescription="Layouts"
                                        android:orientation="horizontal"
                                        android:weightSum="1">

                                        <RadioButton
                                            android:id="@+id/btnNonTax"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:buttonTint="@color/mediumSand"
                                            android:text="Non Deductable"
                                            android:textColor="@color/mediumSand"
                                            android:textSize="@dimen/_12sdp" />

                                        <RadioButton
                                            android:id="@+id/btnTaxable"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:layout_marginStart="@dimen/_5sdp"
                                            android:buttonTint="@color/mediumSand"
                                            android:text="Deductable"
                                            android:textColor="@color/mediumSand"
                                            android:textSize="@dimen/_12sdp" />

                                    </RadioGroup>

                                </androidx.appcompat.widget.LinearLayoutCompat>

                            </RelativeLayout>

                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:id="@+id/llTransaction"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_45sdp"
                            android:layout_below="@id/llTaxStatus"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:orientation="horizontal"
                            android:weightSum="1">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tvTransaction"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_20sdp"
                                    android:fontFamily="@font/poppins_bold"
                                    android:paddingStart="@dimen/_15sdp"
                                    android:text="Mark This Transaction As Paid"
                                    android:textColor="@color/orange"
                                    android:textSize="@dimen/_12sdp" />

                                <androidx.appcompat.widget.LinearLayoutCompat
                                    android:id="@+id/rlChoose"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_23sdp"
                                    android:layout_below="@+id/tvTransaction"
                                    android:layout_marginStart="@dimen/_10sdp"
                                    android:layout_marginEnd="@dimen/_10sdp"
                                    android:gravity="center"
                                    android:orientation="horizontal"
                                    android:weightSum="1">

                                    <RadioGroup
                                        android:id="@+id/firstRg"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginTop="@dimen/_3sdp"
                                        android:contentDescription="Layouts"
                                        android:orientation="horizontal"
                                        android:weightSum="1">

                                        <RadioButton
                                            android:id="@+id/btnYes"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:buttonTint="@color/darkBlue"
                                            android:checked="true"
                                            android:text="Yes"
                                            android:textColor="@color/mediumSand"
                                            android:textSize="@dimen/_12sdp" />

                                        <RadioButton
                                            android:id="@+id/btnNo"
                                            android:layout_width="0dp"
                                            android:layout_height="match_parent"
                                            android:layout_marginStart="@dimen/_5sdp"
                                            android:layout_weight=".5"
                                            android:buttonTint="@color/mediumSand"
                                            android:text="No"
                                            android:textColor="@color/mediumSand"
                                            android:textSize="@dimen/_12sdp" />

                                    </RadioGroup>

                                </androidx.appcompat.widget.LinearLayoutCompat>

                            </RelativeLayout>
                        </androidx.appcompat.widget.LinearLayoutCompat>

                        <RelativeLayout
                            android:id="@+id/rlPayor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/llTransaction"
                            android:layout_marginStart="@dimen/_8sdp"
                            android:layout_marginTop="@dimen/_8sdp"
                            android:layout_marginEnd="@dimen/_8sdp">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvPayor"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_regular"
                                android:paddingStart="@dimen/_25sdp"
                                android:text="Payee"
                                android:textColor="@color/darkBlue"
                                android:textSize="@dimen/_10sdp" />

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:id="@+id/llPayor"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_40sdp"
                                android:layout_below="@id/tvPayor"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:background="@drawable/bg_edit"
                                android:orientation="horizontal"
                                android:weightSum="1">

                                <androidx.appcompat.widget.AppCompatEditText
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@null"
                                    android:fontFamily="@font/poppins_regular"
                                    android:paddingStart="@dimen/_12sdp"
                                    android:paddingEnd="@dimen/_12sdp"
                                    android:singleLine="true"
                                    android:textColor="@color/darkBlue"
                                    android:textSize="@dimen/_12sdp" />

                            </androidx.appcompat.widget.LinearLayoutCompat>

                        </RelativeLayout>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvExenseLabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/rlPayor"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:fontFamily="@font/poppins_semibold"
                            android:paddingStart="@dimen/_15sdp"
                            android:paddingEnd="@dimen/_16sdp"
                            android:paddingBottom="@dimen/_5sdp"
                            android:text="Expense Description"
                            android:textColor="@color/darkBlue"
                            android:textSize="@dimen/_13sdp" />

                        <androidx.appcompat.widget.AppCompatEditText
                            android:id="@+id/etExpenseDescription"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_120sdp"
                            android:layout_below="@id/tvExenseLabel"
                            android:layout_marginStart="@dimen/_2sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginEnd="@dimen/_2sdp"
                            android:layout_marginBottom="@dimen/_2sdp"
                            android:background="@drawable/bg_des"
                            android:gravity="top"
                            android:inputType="textCapSentences|textNoSuggestions|textMultiLine"
                            android:maxLines="6"
                            android:padding="@dimen/_5sdp"
                            android:textColor="@color/darkBlue" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvAttachLabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/etExpenseDescription"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:fontFamily="@font/poppins_medium"
                            android:paddingStart="@dimen/_15sdp"
                            android:paddingEnd="@dimen/_16sdp"
                            android:paddingBottom="@dimen/_5sdp"
                            android:text="Attach file to this transaction"
                            android:textColor="@color/darkBlue"
                            android:textSize="@dimen/_12sdp" />

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvImage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tvAttachLabel"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_15sdp" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btnAddExpense"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_below="@id/rvImage"
                            android:layout_marginLeft="@dimen/_40sdp"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:layout_marginRight="@dimen/_40sdp"
                            android:layout_marginBottom="@dimen/_15sdp"
                            android:background="@drawable/roundbutton"
                            android:padding="10dp"
                            android:text="Add Expense"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_13sdp"
                            android:visibility="gone" />

                    </RelativeLayout>


                </ScrollView>

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>
</layout>