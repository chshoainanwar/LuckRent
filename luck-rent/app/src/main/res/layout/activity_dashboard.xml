<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/contentDashboard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/F2White"
        tools:context=".ui.main.dashboard.Dashboard">


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnPlus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:visibility="gone" />

        <androidx.drawerlayout.widget.DrawerLayout
            android:id="@+id/dashboardDrawerLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="0dp">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <include
                        android:id="@+id/topBar"
                        layout="@layout/top_bar" />


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rlEmptyLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/idEmpty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_empty" />

                    <TextView
                        android:id="@+id/tvAddProperty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/idEmpty"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="center"
                        android:text="Please Add Your Property"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_12sdp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnAddPropert"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_40sdp"
                        android:layout_below="@id/tvAddProperty"
                        android:layout_marginLeft="@dimen/_40sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginRight="@dimen/_40sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:background="@drawable/roundbutton"
                        android:padding="10dp"
                        android:text="Add Property"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_13sdp" />
                </RelativeLayout>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/topBar"
                    android:fillViewport="true"
                    android:scrollbars="none">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="@dimen/_10sdp">

                        <RelativeLayout
                            android:id="@+id/rlName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ic_dashboard_name"
                            android:gravity="center"
                            android:visibility="visible">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvWelcome"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_20sdp"
                                android:fontFamily="@font/poppins_regular"
                                android:paddingTop="@dimen/_5sdp"
                                android:singleLine="true"
                                android:text="Welcome,"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_12sdp" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/tvWelcome"
                                android:layout_marginStart="@dimen/_20sdp"
                                android:layout_marginTop="-6dp"
                                android:fontFamily="@font/poppins_bold"

                                android:text="Ellie Goulding"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_18sdp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rlPropertyName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/rlName"
                            android:background="@drawable/ic_dashboard_name"
                            android:gravity="center"
                            android:visibility="gone">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvManager"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_20sdp"
                                android:fontFamily="@font/poppins_regular"
                                android:paddingTop="@dimen/_5sdp"
                                android:singleLine="true"
                                android:text="Property Manager"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_12sdp" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvPropertyManagerName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/tvManager"
                                android:layout_marginStart="@dimen/_20sdp"
                                android:layout_marginTop="-6dp"
                                android:fontFamily="@font/poppins_bold"
                                android:paddingBottom="@dimen/_10sdp"
                                android:text="Krista Miles"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_18sdp" />


                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rlRadio"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/rlPropertyName"
                            android:layout_marginTop="@dimen/_10sdp">

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:id="@+id/rlChoose"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_23sdp"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:weightSum="1">

                                <RadioGroup
                                    android:id="@+id/firstRg"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="@dimen/_3sdp"
                                    android:contentDescription="Layouts"
                                    android:orientation="horizontal"
                                    android:weightSum="1">

                                    <RadioButton
                                        android:id="@+id/rbManagement"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:buttonTint="@color/darkBlue"
                                        android:checked="true"
                                        android:text="Management Income"
                                        android:textColor="@color/mediumSand"
                                        android:textSize="@dimen/_12sdp" />

                                    <RadioButton
                                        android:id="@+id/rbRental"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_marginStart="@dimen/_5sdp"
                                        android:layout_weight=".5"
                                        android:buttonTint="@color/mediumSand"
                                        android:text="All Rental Income"
                                        android:textColor="@color/mediumSand"
                                        android:textSize="@dimen/_12sdp" />

                                </RadioGroup>

                            </androidx.appcompat.widget.LinearLayoutCompat>

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rlDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/rlRadio"
                            android:padding="@dimen/_5sdp">

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvFirstDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_7sdp"

                                android:text="25 Apr 21"
                                android:textColor="@color/darkBlue"
                                android:textSize="@dimen/_12sdp" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvDash"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_7sdp"
                                android:layout_toRightOf="@+id/tvFirstDate"
                                android:text=" - "
                                android:textColor="@color/darkBlue"
                                android:textSize="@dimen/_12sdp" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tvSecondDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_7sdp"

                                android:layout_toRightOf="@+id/tvDash"
                                android:text="24 Apr 21"
                                android:textColor="@color/darkBlue"
                                android:textSize="@dimen/_12sdp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rlChart"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_270sdp"
                            android:layout_below="@id/rlDate"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/bg_dashboard_chart"
                            android:backgroundTint="@color/white"
                            android:elevation="@dimen/_1sdp">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/_3sdp"
                                android:src="@drawable/chart"
                                android:visibility="gone" />

                            <LinearLayout
                                android:id="@+id/rlMainRevenue"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_65sdp"
                                android:layout_margin="@dimen/_5sdp"
                                android:orientation="horizontal"
                                android:weightSum="3">

                                <RelativeLayout
                                    android:id="@+id/rlRevenue"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1">

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/tvRevenue"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/_15sdp"
                                        android:fontFamily="@font/poppins_regular"
                                        android:gravity="center"
                                        android:text="Revenue"
                                        android:textColor="@color/hardSand"
                                        android:textSize="@dimen/_14sdp" />

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/tvRevenuePrice"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/tvRevenue"
                                        android:layout_centerInParent="true"
                                        android:layout_marginTop="@dimen/_5sdp"
                                        android:fontFamily="@font/poppins_bold"
                                        android:gravity="center"
                                        android:text="$ 200"
                                        android:textColor="@color/lightBlue"
                                        android:textSize="@dimen/_12sdp" />

                                </RelativeLayout>

                                <RelativeLayout
                                    android:id="@+id/rlExpense"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1">

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/tvExpense"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/_15sdp"
                                        android:fontFamily="@font/poppins_regular"
                                        android:gravity="center"
                                        android:text="Expense"
                                        android:textColor="@color/hardSand"
                                        android:textSize="@dimen/_14sdp" />

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/tvExpensePrice"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/tvExpense"
                                        android:layout_centerInParent="true"
                                        android:layout_marginTop="@dimen/_5sdp"
                                        android:fontFamily="@font/poppins_bold"
                                        android:gravity="center"
                                        android:text="$ 300"
                                        android:textColor="@color/red"
                                        android:textSize="@dimen/_12sdp" />

                                </RelativeLayout>

                                <RelativeLayout
                                    android:id="@+id/rlIncome"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1">

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/tvIncome"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="@dimen/_15sdp"
                                        android:fontFamily="@font/poppins_regular"
                                        android:gravity="center"
                                        android:text="Income"
                                        android:textColor="@color/hardSand"
                                        android:textSize="@dimen/_14sdp" />

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/tvProfitPrice"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/tvIncome"
                                        android:layout_centerInParent="true"
                                        android:layout_marginTop="@dimen/_5sdp"
                                        android:fontFamily="@font/poppins_bold"
                                        android:gravity="center"
                                        android:text="$ 1300"
                                        android:textColor="@color/lightYellow"
                                        android:textSize="@dimen/_12sdp" />

                                </RelativeLayout>


                            </LinearLayout>

                            <RelativeLayout
                                android:id="@+id/rlChartDashboard"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_200sdp"
                                android:layout_below="@+id/rlMainRevenue"
                                android:layout_centerInParent="true"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:layout_marginEnd="@dimen/_5sdp"
                                android:gravity="center">


                                <com.github.mikephil.charting.charts.BarChart
                                    android:id="@+id/barChart"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:layout_marginTop="@dimen/_20sdp"
                                    android:layout_marginEnd="@dimen/_5sdp"
                                    android:layout_marginBottom="@dimen/_5sdp" />

                                <TextView
                                    android:id="@+id/dataText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerInParent="true"
                                    android:text="No Analytics Available"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_15sdp"
                                    android:visibility="gone" />
                                <!--                            <androidx.appcompat.widget.AppCompatImageView-->
                                <!--                                android:layout_width="wrap_content"-->
                                <!--                                android:layout_height="wrap_content"-->
                                <!--                                android:src="@drawable/accountbar" />-->
                            </RelativeLayout>


                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/rlUnites"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/rlChart"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:elevation="@dimen/_1sdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_65sdp"
                                android:orientation="horizontal"
                                android:weightSum="3.2">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_margin="@dimen/_2sdp"
                                    android:layout_weight="1"
                                    app:cardBackgroundColor="@color/white"
                                    app:cardCornerRadius="@dimen/_8sdp"
                                    app:cardElevation="@dimen/_1sdp">

                                    <RelativeLayout
                                        android:id="@+id/rlTotalUnits"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">

                                        <androidx.appcompat.widget.AppCompatTextView
                                            android:id="@+id/tvUnits"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/_10sdp"
                                            android:fontFamily="@font/poppins_bold"
                                            android:gravity="center"
                                            android:text="5"
                                            android:textColor="@color/mediumPurple"
                                            android:textSize="@dimen/_20sdp" />

                                        <androidx.appcompat.widget.AppCompatTextView
                                            android:id="@+id/tvUniysLabel"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_below="@+id/tvUnits"
                                            android:layout_centerInParent="true"
                                            android:layout_marginTop="-5dp"
                                            android:fontFamily="@font/poppins_light"
                                            android:gravity="center"
                                            android:text="Total Units"
                                            android:textColor="@color/mediumPurple"
                                            android:textSize="@dimen/_12sdp" />

                                    </RelativeLayout>
                                </androidx.cardview.widget.CardView>

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight=".1" />

                                <androidx.cardview.widget.CardView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_margin="@dimen/_2sdp"
                                    android:layout_weight="1"
                                    app:cardBackgroundColor="@color/white"
                                    app:cardCornerRadius="@dimen/_8sdp"
                                    app:cardElevation="@dimen/_1sdp">

                                    <RelativeLayout
                                        android:id="@+id/rlVacnts"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/bg_dashboard_chart"
                                        android:elevation="@dimen/_2sdp">

                                        <androidx.appcompat.widget.AppCompatTextView
                                            android:id="@+id/tvVacnts"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/_10sdp"
                                            android:fontFamily="@font/poppins_bold"
                                            android:gravity="center"
                                            android:text="2"
                                            android:textColor="@color/red"
                                            android:textSize="@dimen/_20sdp" />

                                        <androidx.appcompat.widget.AppCompatTextView
                                            android:id="@+id/tvVacntsLabel"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_below="@+id/tvVacnts"
                                            android:layout_centerInParent="true"
                                            android:layout_marginTop="-5dp"
                                            android:fontFamily="@font/poppins_light"
                                            android:gravity="center"
                                            android:text="Vacant"
                                            android:textColor="@color/red"
                                            android:textSize="@dimen/_12sdp" />

                                    </RelativeLayout>
                                </androidx.cardview.widget.CardView>

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight=".1" />

                                <androidx.cardview.widget.CardView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_margin="@dimen/_2sdp"
                                    android:layout_weight="1"
                                    app:cardBackgroundColor="@color/white"
                                    app:cardCornerRadius="@dimen/_8sdp"
                                    app:cardElevation="@dimen/_1sdp">


                                    <RelativeLayout
                                        android:id="@+id/rlPaid"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/bg_dashboard_chart">

                                        <androidx.appcompat.widget.AppCompatTextView
                                            android:id="@+id/tvPaid"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/_10sdp"
                                            android:fontFamily="@font/poppins_bold"
                                            android:gravity="center"
                                            android:text="80 %"
                                            android:textColor="@color/mediumRed"
                                            android:textSize="@dimen/_20sdp" />

                                        <androidx.appcompat.widget.AppCompatTextView
                                            android:id="@+id/tvPaidLabel"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_below="@+id/tvPaid"
                                            android:layout_centerInParent="true"
                                            android:layout_marginTop="-5dp"
                                            android:fontFamily="@font/poppins_light"
                                            android:gravity="center"
                                            android:text="Paid"
                                            android:textColor="@color/mediumRed"
                                            android:textSize="@dimen/_12sdp" />

                                    </RelativeLayout>
                                </androidx.cardview.widget.CardView>
                            </LinearLayout>

                        </RelativeLayout>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvReminderLabel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/rlUnites"
                            android:layout_marginTop="@dimen/_7sdp"
                            android:fontFamily="@font/poppins_bold"
                            android:padding="@dimen/_2sdp"
                            android:text="All Tasks"
                            android:textColor="@color/reminder"
                            android:textSize="@dimen/_15sdp" />


                        <RelativeLayout
                            android:id="@+id/rlByReminder"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tvReminderLabel"
                            android:layout_marginTop="-1dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_50sdp"
                                android:orientation="horizontal"
                                android:weightSum="3.2">

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/cvProperty"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_margin="@dimen/_2sdp"
                                    android:layout_weight="1"
                                    app:cardBackgroundColor="@color/white"
                                    app:cardCornerRadius="@dimen/_8sdp"
                                    app:cardElevation="@dimen/_1sdp">

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/tvByProperty"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:fontFamily="@font/poppins_regular"
                                        android:gravity="center"
                                        android:text="By Property"
                                        android:textColor="@color/hardSand"
                                        android:textSize="@dimen/_12sdp" />
                                </androidx.cardview.widget.CardView>

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight=".1" />

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/cvType"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_margin="@dimen/_2sdp"
                                    android:layout_weight="1"
                                    app:cardBackgroundColor="@color/white"
                                    app:cardCornerRadius="@dimen/_8sdp"
                                    app:cardElevation="@dimen/_1sdp">

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/tvByType"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:fontFamily="@font/poppins_regular"
                                        android:gravity="center"
                                        android:text="By Type"
                                        android:textColor="@color/hardSand"
                                        android:textSize="@dimen/_12sdp" />
                                </androidx.cardview.widget.CardView>

                                <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight=".1" />

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/cvStatus"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_margin="@dimen/_2sdp"
                                    android:layout_weight="1"
                                    app:cardBackgroundColor="@color/white"
                                    app:cardCornerRadius="@dimen/_8sdp"
                                    app:cardElevation="@dimen/_1sdp">

                                    <androidx.appcompat.widget.AppCompatTextView
                                        android:id="@+id/tvByStatus"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:fontFamily="@font/poppins_regular"
                                        android:gravity="center"
                                        android:text="By Status"
                                        android:textColor="@color/hardSand"
                                        android:textSize="@dimen/_12sdp" />
                                </androidx.cardview.widget.CardView>
                            </LinearLayout>

                        </RelativeLayout>

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btnTurnOnNotification"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_40sdp"
                            android:layout_below="@id/rlByReminder"
                            android:layout_marginLeft="@dimen/_30sdp"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:layout_marginRight="@dimen/_30sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:background="@drawable/roundbutton"
                            android:padding="10dp"
                            android:text="Turn on Notifications"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_13sdp" />

                        <RelativeLayout
                            android:id="@+id/rlOutstanding"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/btnTurnOnNotification"
                            android:layout_marginTop="@dimen/_7sdp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <androidx.appcompat.widget.AppCompatTextView
